include ../mixins

doctype html
html(lang="ru-RU")

    head
        meta(charset="utf-8")
        meta(http-equiv="x-ua-compatible" content="ie=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="keywords" content="мета-теги, шаблон, html, css")
        meta(name="author" content="")
        meta(name="description" content="описание не длиннее 155 символов")
        title
            block title

        link(rel="shortcut icon" href="img/favicon/favicon.ico" type="image/x-icon")
        link(rel="icon" type="image/png" href="img/favicon/favicon-32x32.png" sizes="32x32")
        link(rel="icon" type="image/png" href="img/favicon/favicon-16x16.png" sizes="16x16")

        //- For IE10 Metro
        meta(name="msapplication-TileImage" content="img/favicon/mstile-150x150.png")
        meta(name="msapplication-TileImage" content="img/favicon/mstile-310x150.png")
        meta(name="msapplication-TileImage" content="img/favicon/mstile-70x70.png")

        //- Chrome, Firefox OS and Opera
        meta(name="theme-color" content="#000")
        //- Windows Phone
        meta(name="msapplication-TileColor" content="#000")
        meta(name="msapplication-navbutton-color" content="#000")
        //- iOS Safari
        meta(name="apple-mobile-web-app-status-bar-style" content="#000")
        meta(name="apple-mobile-web-app-capable" content="yes")
        meta(name="apple-mobile-web-app-title" content="Application Name")

        link(rel="stylesheet" type='text/css' href="css/main.css")
    body
        include ../../img/svgSprite/symbol/sprite.svg
        include ../modules/header
        block content
        include ../modules/footer

        script(src="js/jquery.min.js")
        script(src="js/libs.min.js")
        script(src="js/common.js")